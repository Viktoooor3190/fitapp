rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /coaches/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
    
    match /clients/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
  }
} 