rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isCoach() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coach';
    }
    
    function isClientOfCoach(clientId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/coaches/$(request.auth.uid)) &&
        clientId in get(/databases/$(database)/documents/coaches/$(request.auth.uid)).data.clients;
    }
    
    function isCoachOfSubdomain(subdomain) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/subdomains/$(subdomain)) &&
        get(/databases/$(database)/documents/subdomains/$(subdomain)).data.userId == request.auth.uid;
    }
    
    function getUserIdFromSubdomain(subdomain) {
      return get(/databases/$(database)/documents/subdomains/$(subdomain)).data.userId;
    }
    
    // For debugging purposes
    function debug() {
      return {'auth': request.auth, 'resource': resource.data, 'request': request.resource.data};
    }
    
    // Authentication related collections - always allow access
    match /auth/{document=**} {
      allow read, write: if true;
    }
    
    // Users collection - FOR DEVELOPMENT, ALLOW ALL READS
    match /users/{userId} {
      // During development, allow all reads to users collection
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
      
      // Subcollections
      match /clients/{clientId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      match /programs/{programId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
    
    // Subdomains collection
    match /subdomains/{subdomain} {
      // Anyone can read subdomain data (needed for subdomain resolution)
      // Only the owner or admin can update or delete
      allow read: if true;
      // Allow any authenticated user to create a subdomain
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // Coaches collection - FOR DEVELOPMENT, ALLOW ALL READS
    match /coaches/{coachId} {
      // During development, allow all reads to coaches collection
      allow read: if true;
      
      // Allow create by the coach themselves or admin
      allow create: if isOwner(coachId) || isAdmin();
      
      // Allow updates by the coach, admin, or any authenticated user for client registration
      allow update: if isOwner(coachId) || isAdmin() || 
        (isAuthenticated() && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['clients']));
      
      allow delete: if isAdmin();
      
      // Coach profile is public
      match /profile/{document=**} {
        allow read: if true;
        allow write: if isOwner(coachId) || isAdmin();
      }
      
      // Coach services are public
      match /services/{document=**} {
        allow read: if true;
        allow write: if isOwner(coachId) || isAdmin();
      }
      
      // Coach clients are private
      match /clients/{document=**} {
        allow read, write: if isOwner(coachId) || isAdmin();
      }
    }
    
    // Clients collection
    match /clients/{clientId} {
      // For development and testing, allow all authenticated users to read and write clients
      // This simplifies the rules while we're still developing
      // In production, we would use more restrictive rules
      allow read, write: if isAuthenticated();
      
      // Only admin can delete clients
      allow delete: if isAdmin();
    }
    
    // Programs, sessions, messages, revenue, and reports collections
    match /programs/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    match /sessions/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    match /messages/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    match /revenue/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    match /reports/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Other collections...
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
} 