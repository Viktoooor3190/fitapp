rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isCoach() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coach';
    }
    
    // Authentication related collections - always allow access
    match /auth/{document=**} {
      allow read, write: if true;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and update their own data
      // Admins can read and write all user data
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
      
      // Subcollections
      match /clients/{clientId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      match /programs/{programId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
    
    // Subdomains collection
    match /subdomains/{subdomain} {
      // Anyone can read subdomain data (needed for subdomain resolution)
      // Only the owner or admin can update or delete
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        (request.auth.uid == resource.data.userId || isAdmin());
      
      // Validate subdomain format on create and update
      allow create, update: if 
        // Must start with 'coach'
        request.resource.data.subdomain.matches('^coach[a-z0-9-]*$') &&
        // Length between 5 and 30 characters
        request.resource.data.subdomain.size() >= 5 && 
        request.resource.data.subdomain.size() <= 30 &&
        // Must include userId
        request.resource.data.userId is string;
    }
    
    // Coaches collection
    match /coaches/{coachId} {
      // Allow read access to everyone
      allow read: if true;
      
      // Allow create and update by the coach or admin
      allow create: if isOwner(coachId) || isAdmin();
      
      // Allow updates by the coach, admin, or any authenticated user for client registration
      allow update: if isOwner(coachId) || isAdmin() || 
        (isAuthenticated() && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['clients']));
      
      allow delete: if isAdmin();
      
      // Coach profile is public
      match /profile/{document=**} {
        allow read: if true;
        allow write: if isOwner(coachId) || isAdmin();
      }
      
      // Coach services are public
      match /services/{document=**} {
        allow read: if true;
        allow write: if isOwner(coachId) || isAdmin();
      }
      
      // Coach clients are private
      match /clients/{document=**} {
        allow read, write: if isOwner(coachId) || isAdmin();
      }
    }
    
    // Clients collection
    match /clients/{clientId} {
      allow read: if isOwner(clientId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(clientId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Other collections...
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
} 