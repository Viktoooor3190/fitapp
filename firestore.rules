rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isUserAuthenticated(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isCoach() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coach';
    }
    
    match /coaches/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
    
    match /clients/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isUserAuthenticated(userId);
    }
    
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.coachId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }
    
    match /revenueStats/{statsId} {
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow write: if isAuthenticated() && request.resource.data.coachId == request.auth.uid;
    }
    
    match /reports/{reportId} {
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      // Only cloud functions can write to reports
      allow write: if false;
    }
    
    match /activity/{activityId} {
      // Only allow coaches to read their own activity
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      
      // Allow cloud functions to create activity records
      // Regular users cannot directly create/update/delete activity records
      allow create: if false; // Only cloud functions can create
      allow update: if false; // No updates allowed
      allow delete: if false; // No deletions allowed
    }
    
    match /programs/{programId} {
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.coachId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }
    
    match /sessions/{sessionId} {
      // Allow coaches to access their sessions
      // Allow clients to access sessions they're part of
      allow read: if isAuthenticated() && 
        (resource.data.coachId == request.auth.uid || resource.data.clientId == request.auth.uid);
      
      // Allow coaches to create sessions
      allow create: if isAuthenticated() && request.resource.data.coachId == request.auth.uid;
      
      // Allow coaches to update their sessions
      // Allow clients to update sessions they're part of (for requesting sessions)
      allow update: if isAuthenticated() && 
        (resource.data.coachId == request.auth.uid || resource.data.clientId == request.auth.uid);
      
      // Only coaches can delete sessions
      allow delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }
  }
} 